@model Input
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid d-grid gap-3 align-middle text-center mx-auto" >
<div class="container text-info text-center mt-5">
<h1>Consulta</h1>
</div>
<h4 class="mb-5">Digite el usuario y el dato a consultar</h4>



@using (Html.BeginForm("Consulta", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid card cascading-right d-grid gap-3 list-group-item customcard rounded-3 mt-5 p-5  align-middle" style="max-width: 700px;">
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario, "Nombre del usuario")
        @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" , required = "required" , placeholder="Usuario"} })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Consulta, "Cunsulta")
        @Html.EditorFor(model => model.Consulta, new { htmlAttributes = new { @class = "form-control" , required = "required" , placeholder="Cunsulta"} })
    </div>

    <button type="submit" class="btn btn-outline-success mx-auto" style="max-width: 200px;">Guardar</button>
    </div>
    
}
</div>